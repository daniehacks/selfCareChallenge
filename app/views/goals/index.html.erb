<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Listing Goals</h1>
  <table class="table table-striped table-responsive table-bordered table-condensed">
    <thead>
      <div class="row">
        <div class="col-xs-6 col-md-4">Title</div>
        <div class="col-xs-6 col-md-4">Description</div>
        <div class="col-xs-6 col-md-4">Complete</div>
      </div>
    </thead>

      <tbody>
        <% @goals.each do |goal| %>
          <tr>
            <td><%= goal.title %></td>
            <td><%= goal.description %></td>
            <td><%= goal.complete %></td>
            <td><%= link_to 'Show', goal %></td>
            <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
            <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Goal', new_goal_path %>
</div>